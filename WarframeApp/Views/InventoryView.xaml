                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="auto" SortMemberPath="Mastery" CellTemplate="{StaticResource TemplateMasteryColumn}">
                            <DataGridTemplateColumn.Header>
